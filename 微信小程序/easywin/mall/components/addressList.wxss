@import "common/wepy-swipe-delete.wxss";

.list_box {
  min-height: 150rpx;
}

.address {
  padding-bottom: 100rpx;
}

.address .list_box:last-child {
  border-bottom: 1px solid #efefef;
}

.address .address_list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 0 35rpx;
  border-top: 1px solid #efefef;
}

.address .address_list .title {
  color: #000;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  flex-direction: column;
}

.address .address_list .arrow {
  height: 100%;
  display: flex;
  align-items: center;
  width: 150rpx;
  text-align: center;
  flex-direction: column;
  color: #9a9a9a;
}

.address .address_list .user_info {
  color: #1a1a1a;
}

.address .address_list .user_info .phone {
  margin-left: 16rpx;
}

.address .address_list .active_address {
  margin-top: 20rpx;
}

.address .address_list .defult {
  color: #ea4a3a;
}

.add_wrap {
  display: block;
  width: 95%;
  left: 0;
  right: 0;
  position: fixed;
  bottom: 20rpx;
  margin: 0 auto;
  z-index: 10;
}
